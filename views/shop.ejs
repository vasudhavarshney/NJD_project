<%- include('./includes/head.ejs') %>
<link rel="stylesheet", href="static/css/navbar_style.css">
<link rel="stylesheet", href="static/css/shop_style.css">
<link rel="stylesheet", href="static/css/default_style.css" />
</head>
<body>
    <%- include('./includes/navbar.ejs') %>
    <% if( products.length > 0 ) { %>
        <div class="row">
            <% products.forEach(x => { %>
                <div class="col">
                    <p class="name"><%= x.name %></p>
                    <div class="image">
                        <img src="<%= x.image %>" />
                    </div>
                    <div class="price">Rs. <b><%= x.price %></b>/-</div><br>
                    <!-- <div class="decription"><%= x.decription %></div> -->
                    <div class="cart"><button onClick ='location.href="/product/<%= x.id %>";' class="cart">Details</button>
                    <%- include('./includes/add_to_cart.ejs',{product:x,btnTitle:"Add to Cart",qty:1}) %>
                </div>

            <% }); %>
        </div>
    <%} else { %>
            <div class="card">
                <div class="card-body">
                    <h1>
                        No Products!!!
                    </h1>
                </div>
            </div>
        <%}  %>
             
</body>