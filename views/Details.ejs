<%- include('./includes/head.ejs') %>
<link rel="stylesheet", href="static/css/navbar_style.css">
<link rel="stylesheet", href="static/css/details_style.css">
</head>
<body>
    <%- include('./includes/navbar.ejs') %>
    <div class="container">
        <div class="card">
            <div class="header">
                <h1 class="title">
                    <%= product.name %><hr>
                </h1>
            </div>
            <div class="card_body">
                <div class="image">
                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>" >
                </div>
                <div class="details">
                    <div class="price">Price: Rs. <b><%= product.price %></b>/-</div>
                    <div class="description">Description: <%= product.description %></div>
                </div>
                <% if (isAuthenticated) { %>
                    <%- include('./includes/add_to_cart.ejs',{btnTitle:"Add to Cart",qty:1}) %>
                <% } %>
            </div>

        </div>
    </div>
    
</body>